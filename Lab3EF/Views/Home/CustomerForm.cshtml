@model Lab3EF.ViewModel.CustomersWithCityViewModel
@{
    ViewBag.Title = "EditCustomer";
}

<h2>EditCustomer</h2>

@using (Html.BeginForm("AddCustomer", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.Name)
        @Html.TextBoxFor(x => x.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.Surname)
        @Html.TextBoxFor(x => x.Customer.Surname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.Phone)
        @Html.TextBoxFor(x => x.Customer.Phone, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.City)
        @Html.DropDownListFor(x=>x.Customer.CityId,new SelectList(Model.Cities,"Id","Name"),"Wybierz miasto", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(x => x.Customer.Id)
    <button type="submit">Zapisz</button>
}

